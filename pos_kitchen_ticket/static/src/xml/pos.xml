<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="KitchenTicketScreenWidget">
        <div class="receipt-screen screen touch-scrollable" >
            <div class="pos-step-container">
                <div class="pos-receipt-container">
                </div>
            </div>
        </div>
    </t>

    <t t-name="KitchenTicketButton">
        <span class="control-button order-printbill">
            <i class="fa fa-print"></i>
            Kitchen Ticket
        </span>
    </t>

    <t t-name="KitchenTicket">
        <div class="pos-sale-ticket" style="font-size:1.2em;font-weight:bold;color:black;font-family: Lato;">

            <div class="pos-center-align"><t t-esc="new Date().toString(Date.CultureInfo.formatPatterns.shortDate + ' ' +
                Date.CultureInfo.formatPatterns.longTime)"/> Order No: <t t-esc="order.get('name').split('-')[2]"/></div>
            <br />
            <t t-esc="widget.pos.company.name"/><br />
            Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
            User: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
            <t t-if="order.changed.client">
                Customer: <t t-esc="order.changed.client.name"/><br />
            </t>
            <br />
            <div class="pos-center-align" style="font-size:1.2em;font-weight:bold;">Kitchen Ticket</div>
            <br />
            <table>
                <colgroup>
                    <col width='50%' />
                    <col width='15%' />
                    <col width='25%' />
                    <col width='10%' />
                </colgroup>
                <tr>
                	<th width='50%' style="text-align:center;">Items</th>
                	<th width='15%' style="text-align:right;">#Qty</th>
                	<th width='25%' style="text-align:right;">Price</th>
                	<th width='10%'></th>
                </tr>
                <tr t-foreach="orderlines" t-as="orderline">
					<t t-if="orderline.get_product().print_in_kitchen_ticket">
	                    <td>
	                        <t t-esc="orderline.get_product().display_name"/>
	                    </td>
	                    <td class="pos-right-align">
	                        <t t-esc="orderline.get_quantity_str_with_unit()"/>
	                    </td>
	                    <td class="pos-right-align">
							<t t-esc="widget.format_currency(orderline.get_display_price())"/>
						</td>
                    </t>
                </tr>
            </table>
            <br />
        </div>
    </t>

</templates>
